        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal">

        <Button
            android:id="@+id/fileScan"
            android:layout_width="75pt"
            android:layout_height="20pt"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/rounded_button_left"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/scan_files"
            android:textColor="@color/black"
            app:useCompatPadding="true"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/appScan"
            android:layout_width="75pt"
            android:layout_height="20pt"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/rounded_button_right"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/scan_apps"
            android:textColor="@color/black"
            app:useCompatPadding="true"
            tools:ignore="TextContrastCheck" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:paddingTop="45pt">

        <Button
            android:id="@+id/appLocker"
            android:layout_width="75pt"
            android:layout_height="20pt"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/rounded_button_left"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/AppLocker"
            android:textColor="@color/black"
            app:useCompatPadding="true"
            tools:ignore="TextContrastCheck" />

        <Button
            android:id="@+id/permissionManager"
            android:layout_width="75pt"
            android:layout_height="20pt"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:background="@drawable/rounded_button_right"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/permission_viewer"
            android:textColor="@color/black"
            app:useCompatPadding="true"
            tools:ignore="TextContrastCheck" />


    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>